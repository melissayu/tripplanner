<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvCreateItineraryLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:text="Create New Itinerary"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etCreateItineraryTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCreateItineraryLabel"
        android:ems="10"
        android:hint="Title" />

    <EditText
        android:id="@+id/etCreateItineraryDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etCreateItineraryTitle"
        android:ems="10"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:minLines="5"
        android:gravity="top" />

    <!--<TextView
        android:id="@+id/tvTypeLabel"
        android:layout_below="@id/etCreateItineraryDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type" />

    <Spinner
        android:id="@+id/spinnerType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etCreateItineraryDescription"
        android:layout_toRightOf="@+id/tvTypeLabel"
        android:layout_toEndOf="@+id/tvTypeLabel"
        />-->

    <Button
        android:id="@+id/btnCreateItinerarySave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save and add Stops > "
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>