<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivItineraryDetailPhoto"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/places_ic_clear" />

    <TextView
        android:id="@+id/tvItineraryDetailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ItineraryTitle" />

    <TextView
        android:id="@+id/tvItineraryDetailDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvItineraryDetailTitle"
        android:text="ItineraryDescription" />

    <TextView
        android:id="@+id/tvItineraryDetailFeatures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvItineraryDetailDescription"
        android:text="Features : San Jose , $ , Food" />

    <ImageView
        android:id="@+id/ivItineraryDetailBookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/ic_bookmark_border" />
</RelativeLayout>