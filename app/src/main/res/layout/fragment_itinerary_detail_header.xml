<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    android:padding="10dp">

    <!--<ImageView
        android:id="@+id/ivItineraryDetailPhoto"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/places_ic_clear" />-->

    <TextView
        android:id="@+id/tvItineraryDetailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="ItineraryTitle"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvItineraryDetailDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvItineraryDetailTitle"
        android:text="ItineraryDescription" />

    <TextView
        android:id="@+id/tvItineraryDetailFeatures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvItineraryDetailDescription"
        android:text="Features:" />

    <ImageView
        android:id="@+id/ivItineraryDetailBookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_bookmark_border" />

    <ImageView
        android:id="@+id/ivItineraryDetailMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvItineraryDetailFeatures"
        android:layout_alignLeft="@+id/ivItineraryDetailBookmark"
        app:srcCompat="@drawable/ic_map" />

    <ImageView
        android:id="@+id/ivItineraryDetailDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/ivItineraryDetailMap"
        app:srcCompat="@drawable/ic_delete" />

</RelativeLayout>